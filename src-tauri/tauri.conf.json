{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "紫微绎式",
  "version": "0.1.0",
  "identifier": "com.lzm0x219.ziwei.simulator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4590",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "width": 1270,
        "minWidth": 1270,
        "height": 800,
        "minHeight": 800,
        "backgroundColor": "#f2f2f2",
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
